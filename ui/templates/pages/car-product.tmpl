{{ define "page" }}

<div class="vehicle-view-container">
    <div class="vehicle-main">
        <div class="header">
            <h1>Peugeot 308 GT Line</h1>
            <span class="status-badge">Disponible</span>
        </div>

        <div class="gallery">
            <div class="main-image" style="background-image: url('/static/images/vehicles/peugeot-308-1.jpg')"></div>
            <div class="thumbnail-grid">
                <div class="thumbnail" style="background-image: url('/static/images/vehicles/peugeot-308-1.jpg')"></div>
                <div class="thumbnail" style="background-image: url('/static/images/vehicles/peugeot-308-2.jpg')"></div>
                <div class="thumbnail" style="background-image: url('/static/images/vehicles/peugeot-308-3.jpg')"></div>
                <div class="thumbnail" style="background-image: url('/static/images/vehicles/peugeot-308-4.jpg')"></div>
                <div class="thumbnail" style="background-image: url('/static/images/vehicles/peugeot-308-5.jpg')"></div>
            </div>
        </div>

        <div class="section">
            <h2>Caractéristiques Techniques</h2>
            <div class="specs-grid">
                <div class="spec-item">
                    <div class="spec-label">Immatriculation</div>
                    <div class="spec-value">AB-123-CD</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Année</div>
                    <div class="spec-value">2022</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Kilométrage</div>
                    <div class="spec-value">45 000 km</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Carburant</div>
                    <div class="spec-value">Diesel</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Transmission</div>
                    <div class="spec-value">Automatique</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Puissance</div>
                    <div class="spec-value">130 ch</div>
                </div>
            </div>
        </div>

        <div class="section">
            <h2>Description</h2>
            <div class="description">
                Superbe Peugeot 308 GT Line en excellent état.
                Première main, carnet d'entretien complet.
                Équipements :
                - GPS
                - Caméra de recul
                - Sièges chauffants
                - Toit panoramique
                - Jantes alliage 18"
            </div>
        </div>
    </div>

    <div class="vehicle-sidebar">
        <div class="price-section">
            <div class="price-label">Prix</div>
            <div class="price-value">24 900 €</div>
        </div>

        <div class="section">
            <h2>Historique</h2>
            <div class="spec-item">
                <div class="spec-label">Date d'ajout</div>
                <div class="spec-value">12/04/2024</div>
            </div>
            <div class="spec-item">
                <div class="spec-label">Dernière modification</div>
                <div class="spec-value">13/04/2024</div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="/vehicle/update/1" class="button primary-button">Modifier</a>
            <a href="/vehicle/list" class="button secondary-button">Retour à la liste</a>
        </div>
    </div>
</div>

{{ end }}