{{ define "page" }}

    <div class="form-container">
        <h1>Modifier Client</h1>
        <form method="post" action="/client/42" class="data-form">
            <input type="hidden" name="id" value="42">
            <input type="hidden" name="version" value="2">

            <div class="form-section">
                <h2>Informations Personnelles</h2>
                <div class="form-group">
                    <label for="first-name">Prénom</label>
                    <input type="text" name="first-name" id="first-name" value="Martin" required>
                </div>

                <div class="form-group">
                    <label for="last-name">Nom</label>
                    <input type="text" name="last-name" id="last-name" value="Dupont" required>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" value="martin.dupont@email.com" required>
                </div>

                <div class="form-group">
                    <label for="phone">Téléphone</label>
                    <input type="tel" name="phone" id="phone" value="06 12 34 56 78">
                </div>
            </div>

            <div class="form-section">
                <h2>Adresse</h2>
                <div class="form-group">
                    <label for="street">Rue</label>
                    <input type="text" name="street" id="street" value="123 rue de la Paix" required>
                </div>

                <div class="form-group">
                    <label for="complement">Complément</label>
                    <input type="text" name="complement" id="complement" value="Bâtiment B">
                </div>

                <div class="form-group">
                    <label for="city">Ville</label>
                    <input type="text" name="city" id="city" value="Marseille" required>
                </div>

                <div class="form-group">
                    <label for="zip">Code Postal</label>
                    <input type="text" name="zip" id="zip" value="13001" required>
                </div>

                <div class="form-group">
                    <label for="country">Pays</label>
                    <input type="text" name="country" id="country" value="France" required>
                </div>
            </div>

            <div class="form-section">
                <h2>Informations Concession</h2>
                <div class="form-group">
                    <label for="shop">Concession</label>
                    <input type="text" name="shop" id="shop" value="HEADQUARTERS" required>
                </div>

                <div class="form-group">
                    <label for="status">Statut</label>
                    <select name="status" id="status" required>
                        <option value="ACTIVE" selected>ACTIVE</option>
                        <option value="CONFLICT">CONFLICT</option>
                        <option value="DELETED">DELETED</option>
                    </select>
                </div>
            </div>

            <div class="form-actions">
                <a href="/clients" class="cancel-button">Annuler</a>
                <button type="submit" class="submit-button">Enregistrer</button>
            </div>
        </form>
    </div>

{{ end }}