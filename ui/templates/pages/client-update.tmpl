{{ define "page" }}

<div class="client-form-container">
    <div class="header">
        <h1>Modifier le Client</h1>
        <span class="client-id">#12345</span>
    </div>

    <form method="post" action="/client/update/12345">
        <div class="form-section">
            <h2>Informations Personnelles</h2>
            <div class="form-grid">
                <div class="form-group">
                    <label for="civility" class="required">Civilité</label>
                    <select name="civility" id="civility" required>
                        <option value="mr" selected>Monsieur</option>
                        <option value="mme">Madame</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="type" class="required">Type</label>
                    <select name="type" id="type" required>
                        <option value="particular" selected>Particulier</option>
                        <option value="professional">Professionnel</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="lastname" class="required">Nom</label>
                    <input type="text" id="lastname" name="lastname" value="Durant" required>
                </div>
                <div class="form-group">
                    <label for="firstname" class="required">Prénom</label>
                    <input type="text" id="firstname" name="firstname" value="Martin" required>
                </div>
                <div class="form-group">
                    <label for="birthdate">Date de naissance</label>
                    <input type="date" id="birthdate" name="birthdate" value="1985-03-15">
                </div>
                <div class="form-group">
                    <label for="nationality">Nationalité</label>
                    <input type="text" id="nationality" name="nationality" value="Française">
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2>Coordonnées</h2>
            <div class="form-grid">
                <div class="form-group">
                    <label for="email" class="required">Email</label>
                    <input type="email" id="email" name="email" value="martin.durant@email.com" required>
                </div>
                <div class="form-group">
                    <label for="phone" class="required">Téléphone</label>
                    <input type="tel" id="phone" name="phone" value="06 12 34 56 78" required>
                </div>
                <div class="form-group full-width">
                    <label for="address" class="required">Adresse</label>
                    <input type="text" id="address" name="address" value="123 rue de la Paix" required>
                </div>
                <div class="form-group">
                    <label for="postal_code" class="required">Code Postal</label>
                    <input type="text" id="postal_code" name="postal_code" value="13000" required>
                </div>
                <div class="form-group">
                    <label for="city" class="required">Ville</label>
                    <input type="text" id="city" name="city" value="Marseille" required>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2>Informations Complémentaires</h2>
            <div class="form-grid">
                <div class="form-group full-width">
                    <label for="notes">Notes</label>
                    <textarea id="notes" name="notes" rows="4">Client fidèle depuis 2020.
Préfère être contacté par email.
Intéressé par les véhicules hybrides.</textarea>
                </div>
            </div>
        </div>

        <div class="history-section">
            <h2>Historique des modifications</h2>
            <div class="history-item">Créé le 12/04/2024 à 14:30 par Jean Dupont</div>
            <div class="history-item">Modifié le 13/04/2024 à 09:15 par Marie Martin</div>
        </div>

        <div class="action-buttons">
            <div class="left-buttons">
                <button type="button" class="button delete-button" onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce client ?')) window.location.href='/client/delete/12345'">Supprimer</button>
            </div>
            <div class="right-buttons">
                <a href="/client/view/12345" class="button cancel-button">Annuler</a>
                <button type="submit" class="button save-button">Enregistrer</button>
            </div>
        </div>
    </form>
</div>
{{ end }}