{{ define "page" }}

<div class="transaction-form-container">
    <h1>Nouvelle Transaction</h1>
    <form method="post" action="/transaction/create">
        <div class="form-section">
            <h2>Informations Client</h2>
            <div class="form-group">
                <label for="client_id">Client</label>
                <select name="client_id" id="client_id" required>
                    <option value="">Sélectionner un client</option>
                    <option value="1">Martin Durant</option>
                    <option value="2">Sophie Bernard</option>
                    <option value="3">Pierre Dubois</option>
                </select>
            </div>
        </div>

        <div class="form-section">
            <h2>Véhicules</h2>
            <div class="car-selection">
                <div class="car-item">
                    <input type="checkbox" id="car_1" name="cars[]" value="1">
                    <label for="car_1">Peugeot 308 GT Line - AB-123-CD</label>
                </div>
                <div class="car-item">
                    <input type="checkbox" id="car_2" name="cars[]" value="2">
                    <label for="car_2">Renault Clio - EF-456-GH</label>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h2>Détails de la Transaction</h2>
            <div class="form-group">
                <label for="status">Statut</label>
                <select name="status" id="status" required>
                    <option value="pending">En attente</option>
                    <option value="in_progress">En cours</option>
                    <option value="completed">Terminée</option>
                </select>
            </div>

            <div class="form-group">
                <label for="notes">Notes</label>
                <textarea name="notes" id="notes" rows="4"></textarea>
            </div>
        </div>

        <div class="action-buttons">
            <a href="/transaction/list" class="button cancel-button">Annuler</a>
            <button type="submit" class="button create-button">Créer la transaction</button>
        </div>
    </form>
</div>

{{ end }}