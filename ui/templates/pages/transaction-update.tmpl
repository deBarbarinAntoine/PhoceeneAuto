{{ define "page" }}

    <div class="transaction-form-container">
        <div class="header">
            <h1>Modifier la Transaction #42</h1>
        </div>

        <form method="post" action="/transaction/42">
            <input type="hidden" name="id" value="42">
            <input type="hidden" name="version" value="1">
            <input type="hidden" name="user_id" value="15">

            <div class="form-section">
                <h2>Client</h2>
                <div class="form-group">
                    <label for="client_id">Client</label>
                    <select name="client_id" id="client_id" required>
                        <option value="1" selected>Jean Martin (ACTIVE)</option>
                        <option value="2">Marie Dubois (ACTIVE)</option>
                    </select>
                </div>
            </div>

            <div class="form-section">
                <h2>Véhicules</h2>
                <div class="car-selection">
                    <div class="car-item">
                        <input type="checkbox" id="car_1" name="cars[]" value="1" checked>
                        <label for="car_1">Peugeot 308 (ONSALE) - 25000€ - 50000km</label>
                    </div>
                    <div class="car-item">
                        <input type="checkbox" id="car_2" name="cars[]" value="2" checked>
                        <label for="car_2">Renault Clio (ONSALE) - 18000€ - 30000km</label>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h2>Détails</h2>
                <div class="form-group">
                    <label for="status">Statut</label>
                    <select name="status" id="status" required>
                        <option value="PROCESSING">PROCESSING</option>
                        <option value="ONGOING" selected>ONGOING</option>
                        <option value="DONE">DONE</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="leases">Mensualités (séparées par des virgules)</label>
                    <input type="text" name="leases" id="leases" value="300.50, 300.50, 300.50" required>
                </div>
            </div>

            <div class="form-section">
                <h2>Informations Système</h2>
                <div>Créée le: 15/04/2024</div>
                <div>Dernière modification: 16/04/2024</div>
                <div>Par: Marie Dubois</div>
            </div>

            <div class="action-buttons">
                <a href="/transaction/list" class="button cancel-button">Annuler</a>
                <button type="submit" class="button save-button">Enregistrer</button>
            </div>
        </form>
    </div>

{{ end }}