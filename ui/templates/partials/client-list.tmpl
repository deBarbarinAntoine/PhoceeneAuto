    {{/*Client List*/}}
    <div class="client-grid">

        {{ range . }}

            <div class="client-card">
                <div class="client-header">
                    <div class="client-name">{{ with .FirstName }}{{ . }}{{ end }} {{ with .LastName }}{{ . }}{{ end }}</div>
                    <div class="client-status active">{{ with .Status }}{{ . }}{{ end }}</div>
                </div>
                <div class="client-info">
